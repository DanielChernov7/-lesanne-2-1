<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:String x:Key="AppTitle">Car Inventory</sys:String>
    <sys:String x:Key="SearchLabel">Search</sys:String>
    <sys:String x:Key="SearchFieldLabel">Search Field</sys:String>
    <sys:String x:Key="StatusFilterLabel">Status</sys:String>
    <sys:String x:Key="AddButton">Add</sys:String>
    <sys:String x:Key="EditButton">Edit</sys:String>
    <sys:String x:Key="DeleteButton">Delete</sys:String>
    <sys:String x:Key="ClearFiltersButton">Clear Filters</sys:String>

    <sys:String x:Key="IdHeader">ID</sys:String>
    <sys:String x:Key="BrandHeader">Brand</sys:String>
    <sys:String x:Key="ModelHeader">Model</sys:String>
    <sys:String x:Key="YearHeader">Year</sys:String>
    <sys:String x:Key="PriceHeader">Price</sys:String>
    <sys:String x:Key="FuelTypeHeader">Fuel Type</sys:String>
    <sys:String x:Key="StatusHeader">Status</sys:String>

    <sys:String x:Key="DialogTitle">Car Details</sys:String>
    <sys:String x:Key="OkButton">OK</sys:String>
    <sys:String x:Key="CancelButton">Cancel</sys:String>

    <sys:String x:Key="IdLabel">ID</sys:String>
    <sys:String x:Key="BrandLabel">Brand</sys:String>
    <sys:String x:Key="ModelLabel">Model</sys:String>
    <sys:String x:Key="YearLabel">Year</sys:String>
    <sys:String x:Key="PriceLabel">Price</sys:String>
    <sys:String x:Key="FuelTypeLabel">Fuel Type</sys:String>
    <sys:String x:Key="StatusLabel">Status</sys:String>

    <Thickness x:Key="StandardMargin">8</Thickness>

    <Style TargetType="Button">
        <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
        <Setter Property="MinWidth" Value="90" />
        <Setter Property="Padding" Value="10,4" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
        <Setter Property="MinWidth" Value="140" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
        <Setter Property="MinWidth" Value="140" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
